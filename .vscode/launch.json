{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run C Code",
            "type": "cppdbg",
            "request": "launch",
            "program": "'${fileDirname}'/${fileBasenameNoExtension}.exe",  // Output file for MinGW
            "args": [],
            "stopAtEntry": false,
            "cwd": "'${fileDirname}'",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "C:/msys64/usr/bin/gdb.exe"  // Adjust this path as necessary
        }
    ]
}
